{
    "workbench.colorTheme": "Default Light+",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "diffEditor.ignoreTrimWhitespace": false,

    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-NoLogo", "-ExecutionPolicy", "RemoteSigned", "-NoExit", "-Command", "Import-Module posh-git"]
        },
    },
    "terminal.integrated.env.windows": {
        "GOROOT":"${env:USERPROFILE}\\Tools\\go",
        "PATH":"${env:PATH};${env:USERPROFILE}\\Tools\\Git\\bin;${env:USERPROFILE}\\Tools\\go\\bin;${env:USERPROFILE}\\.cargo\\bin",
    },
    "terminal.integrated.automationShell.windows": "cmd.exe",

    "git.autofetch": true,
    "git.path": "${manual:USERPROFILE}\\Tools\\Git\\bin\\git.exe",

    "go.goroot": "${manual:USERPROFILE}\\Tools\\go",
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.enableCodeLens": {
        "references": false,
        "runtest": true
    },

    "rust-client.channel": "stable",
    "rust-client.rustupPath": "${manual:USERPROFILE}\\.cargo\\bin\\rustup",
}
